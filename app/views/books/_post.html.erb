
	<td>
        <%= link_to(book.user) do %>
		<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
		<% end %>
	</td>
	<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
	<td><%= book.body %></td>
    <td>
        <% if book.favorited_by?(current_user) %>
            <%= link_to book_favorite_path(book.id), method: :delete, remote: true do %>
             <i class="fa fa-heart" id="unlike_<%= book.id %>" aria-hidden="true" style="color: red;"></i>
                <%= book.favorites.count %>
             <% end %>
        <% else %>
            <%= link_to book_favorite_path(book.id), method: :post, remote: true do %>
                <i class="fa fa-heart" id="like_<%= book.id %>" aria-hidden="true" style="color: black;"></i>
                <%= book.favorites.count %>
            <% end %>
        <% end %>
    </td>
    <td>コメント数：　<%= book.book_comments.count %></td>

